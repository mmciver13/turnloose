// ____________________
// palette
// ____________________

$clr-gold: #D9B073;
$clr-cool-grey: #9B9EA0;
$clr-navy: #004461;
$clr-black: #000;
$clr-white: #fff;

// ____________________
// sizing
// ____________________

$sz-max-width:1280px;
$sz-font-base:24px;
$sz-base:15px;
$sz-footer:400px;

$base-sm: 676px;
$base-md: 1024px;

// ____________________
// typography
// ____________________

@import url('https://fonts.googleapis.com/css?family=Nunito');
@import url('https://fonts.googleapis.com/css?family=Montserrat:300,400,800');

$fnt-header:"Nunito","Helvetica Neue",sans-serif;
$fnt-body:"Montserrat","Helvetica Neue",Arial,sans-serif;

h1, h2, h3, h4, h5, h6, h7 {
  font-family:$fnt-header;
}

body {
  font-family:$fnt-body;
  color:$clr-black;
}

// ____________________
// rows
// ____________________

  $max-width:990px;

 .row {
   width:100%;
   max-width:$max-width;
   margin:0 auto;
   &:after {
     content: "";
     display: table;
     clear: both;
   }
 }

 .row-fullwidth {
   max-width:100%;
 }

 .row-half {
   width:50%;
   float:left;
   display:inline-block;
   @media (max-width:676px) {
     width:100%;
     display:block;
     float:none;
   }
   &:after {
     content: '';
     display: table;
     clear: both;
   }
 }

 .row-text-focus {
   h1 {
     line-height:31.32px
   }
 }

 // ____________________
 // columns
 // ____________________

 $col-full:100%;
 $col-half:($col-full)/2;
 $col-third:($col-full)/3;
 $col-quarter:($col-half)/2;
 $col-eighth:($col-quarter)/2;

 div[class^="col-"], div[class*=" col-"] {
   float:left;
   position:relative;
   @media (max-width:$base-sm) {
     float:none;
     display:block;
     width:100%;
   }
 }

 .col-full {
   width:$col-full;
 }

 .col-half {
   width:$col-half;
 }

 .col-third {
   width:$col-third;
 }
 .col-two-third {
   width:$col-third*2;
 }

 .col-quarter {
   width:$col-quarter;
 }
 .col-three-quarter {
   width:$col-quarter*3;
 }

 .col-eighth {
   width:$col-eighth;
 }
 .col-three-eighth {
   width:$col-eighth*3;
 }
 .col-five-eighth {
   width:$col-eighth*5;
 }
 .col-seven-eighth {
   width:$col-eighth*7;
 }

 // ____________________
 // footer
 // ____________________

 .tl-footer {
   background-color:$clr-black;
   padding:$sz-base*5 $sz-base*2;
   color:$clr-white;
   min-height:$sz-footer;
   .content {
     min-height:$sz-footer;
     position:relative;
   }
   a, a:hover, a:visited, a:active {
     text-decoration:none;
     color:$clr-white;
   }
   .tl-foot-collections, .tl-foot-nav {
     color:$clr-white;
     text-transform:uppercase;
     font-size:$sz-font-base;
   }
   .tl-foot-collections {
     font-weight:800;
     margin:0;
   }
   .tl-foot-sep {
     display:inline-block;
     height:1px;
     width:100px;
     background-color:$clr-white;
     margin:$sz-base 0;
   }
   .tl-foot-logo {
     width:100%;
     //todo: featured footer logo
     background:url("{{ 'foot-logo.png' | asset_url }}");
     background-size:contain;
     background-repeat:no-repeat;
     height:$sz-footer;
     opacity:.35;
   }
   .tl-foot-social {
     position:absolute;
     bottom:0;
     left:0;
     ul {
       padding:0;
       margin:0;
       li {
         display:inline-block;
         font-weight:300;
         margin-right:$sz-base*2;
         text-transform:uppercase;
       }
     }
   }
 }

