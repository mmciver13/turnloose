// ____________________
// palette
// ____________________

$clr-gold: #D9B073;
$clr-cool-grey: #9B9EA0;
$clr-navy: #004461;
$clr-black: #000;
$clr-snow: #f0f0f0;
$clr-white: #fff;

// ____________________
// sizing
// ____________________

$sz-max-width:1280px;
$sz-font-base:24px;
$sz-base:15px;
$sz-footer:400px;

$base-sm: 676px;
$base-md: 1024px;

// ____________________
// animation
// ____________________

@keyframes fadein {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

@mixin fadein($duration) {
  -webkit-animation: fadein $duration 1;
  -moz-animation:    fadein $duration 1;
  -o-animation:      fadein $duration 1;
  animation:         fadein $duration 1;
}

.fadein-1 {
  @include fadein(.45s);
}
.fadein-2 {
  @include fadein(.75s);
}
.fadein-3 {
  @include fadein(1.25s);
}

// ____________________
// typography
// ____________________

@import url('https://fonts.googleapis.com/css?family=Nunito:400,900');
@import url('https://fonts.googleapis.com/css?family=Montserrat:300,400,800');

$fnt-header:"Nunito","Helvetica Neue",sans-serif;
$fnt-body:"Montserrat","Helvetica Neue",Arial,sans-serif;

h1, h2, h3, h4, h5, h6, h7 {
  font-family:$fnt-header;
}

body {
  font-family:$fnt-body;
  color:$clr-black;
}

* {
  box-sizing:border-box;
}

.tl-subhead {
  font-family:$fnt-header;
  text-transform:uppercase;
  line-height:43px;
  font-size:40px;
  color:lighten($clr-black,50%);
  font-weight:500;
  text-align:center;
  margin:$sz-base*2 0;
  @media (max-width:$base-sm) {
    font-size:33px;
    font-size:30px;
  }
}

// ____________________
// rows
// ____________________

  $max-width:1280px;

 .row {
   width:100%;
   max-width:$max-width;
   margin:0 auto;
   &:after {
     content: "";
     display: table;
     clear: both;
   }
 }

 .row-fullwidth {
   max-width:100%;
 }

 .tl-three-quarter-width {
   width:100%;
   max-width:($max-width)*.75;
   margin:0 auto;
   padding:0 $sz-base;
   &:after {
     content: "";
     display: table;
     clear: both;
   }
 }

 .row-half {
   width:50%;
   float:left;
   display:inline-block;
   @media (max-width:$base-sm) {
     width:100%;
     display:block;
     float:none;
   }
   &:after {
     content: '';
     display: table;
     clear: both;
   }
 }

 .row-text-focus {
   h1 {
     line-height:31.32px
   }
 }

 .row-clr-snow {
   background-color:$clr-snow;
 }

 .row-tl-bump {
   padding:$sz-base*3 $sz-base*2;
 }
 // ____________________
 // columns
 // ____________________

 $col-full:100%;
 $col-half:($col-full)/2;
 $col-third:($col-full)/3;
 $col-quarter:($col-half)/2;
 $col-eighth:($col-quarter)/2;

 div[class^="col-"], div[class*=" col-"] {
   float:left;
   position:relative;
   @media (max-width:$base-sm) {
     float:none;
     display:block;
     width:100%;
   }
 }

 .col-full {
   width:$col-full;
 }

 .col-half {
   width:$col-half;
 }

 .col-third {
   width:$col-third;
 }
 .col-two-third {
   width:$col-third*2;
 }

 .col-quarter {
   width:$col-quarter;
 }
 .col-three-quarter {
   width:$col-quarter*3;
 }

 .col-eighth {
   width:$col-eighth;
 }
 .col-three-eighth {
   width:$col-eighth*3;
 }
 .col-five-eighth {
   width:$col-eighth*5;
 }
 .col-seven-eighth {
   width:$col-eighth*7;
 }

 // ____________________
 // footer
 // ____________________

 .tl-footer {
   background-color:$clr-black;
   padding:$sz-base*5 $sz-base*8;
   color:$clr-white;
   min-height:$sz-footer;
   @media (max-width:$base-sm) {
     padding:$sz-base*3 $sz-base*2 $sz-base $sz-base*2;
   }
   .content {
     min-height:$sz-footer;
     position:relative;
   }
   a, a:hover, a:visited, a:active {
     text-decoration:none;
     color:$clr-white;
   }
   .tl-foot-collections, .tl-foot-nav {
     color:$clr-white;
     text-transform:uppercase;
     font-size:$sz-font-base;
     line-height:$sz-font-base*1.2;
     letter-spacing:2px;
   }
   .tl-foot-collections {
     font-weight:800;
     margin:0;
   }
   .tl-foot-nav {
     font-weight:300;
   }
   .tl-foot-sep {
     display:inline-block;
     height:1px;
     width:100px;
     background-color:$clr-white;
     margin:$sz-base 0;
   }
   .tl-foot-logo {
     width:100%;
     //todo: featured footer logo
     background:url("{{ 'foot-logo.png' | asset_url }}");
     background-size:contain;
     background-repeat:no-repeat;
     background-position:right center;
     height:$sz-footer;
     opacity:.35;
     @media (max-width:$base-sm) {
       background-position:center center;
     }
   }
   .tl-foot-social {
     position:absolute;
     bottom:0;
     left:0;
     ul {
       padding:0;
       margin:0;
       li {
         display:inline-block;
         font-weight:300;
         margin-right:$sz-base*2;
         text-transform:uppercase;
       }
     }
   }
 }

 // ____________________
 // collection boxes
 // ____________________

 $box-height:40vh;
 $box-padding:$sz-base/2;

 .tl-hero-featured-row {
   padding:$box-padding;
   box-sizing:border-box !important;
   .tl-box-container {
     padding:$box-padding;
   }
   .tl-collection-box {
     height:$box-height;
     overflow:hidden;
     position:relative;
     text-align:center;
     .tl-box-cover {
       position:absolute;
       top:0;
       left:0;
       right:0;
       bottom:0;
       background-color:rgba($clr-black,.45);
       transition:all .45s ease;
     }
     &:hover {
       .tl-box-cover {
       background-color:rgba($clr-black,1);
       top:0;
       left:0;
       right:0;
       bottom:0;
      }
     }
     .tl-box-name {
       position:absolute;
       left:0;
       right:0;
       top:50%;
       transform:translateY(-50%);
       color:$clr-white;
       text-decoration:none !important;
       font-family:$fnt-body;
       font-weight:bold;
       text-align:center;
       display:block;
     }
     .tl-box-name-alt {
       color:$clr-white;
       text-decoration:none !important;
       font-family:$fnt-body;
       font-weight:bold;
       text-align:center;
       display:block;
       margin:0;
     }
     .tl-box-subhead {
       color:$clr-white !important;
       letter-spacing:2px;
       text-transform:uppercase;
       font-size:(($sz-font-base)/1.25);
       line-height:(($sz-font-base)/1.25)+3px;
       font-weight:light;
     }
     .tl-box-content {
       position:absolute;
       top:50%;
       transform:translateY(-50%);
       left:0;
       right:0;
     }
   }
 }

 // ____________________
 // hero
 // ____________________

$hero-size: 60vh;

 .tl-hero {
   max-width: 100%;
   min-height:$hero-size;
   color:$clr-white;
   position:relative;
   .content {
     position:absolute;
     top:50%;
     transform:translateY(-50%);
     left:0;
     right:0;
     text-align:center;
     display:block;
     h1 {
       font-family:$fnt-body;
       font-weight:800;
       font-size:$sz-font-base*3;
       line-height:($sz-font-base*3)+5px;
       text-transform:uppercase;
       margin:0;
     }
     .tl-hero-subhead {
       font-size:$sz-font-base;
       line-height:$sz-font-base+5px;
       font-weight:normal;
       letter-spacing:3px;
     }
   }
   .tl-hero-cover {
     position:absolute;
     top:0;
     left:0;
     right:0;
     bottom:0;
     background-color:rgba($clr-black,.35);
   }
   .tl-down-arrow {
     position:absolute;
     bottom:$sz-base*2;
     left:50%;
     transform:translateX(-50%);
   }
 }

 .tl-product-hero {
   padding-top:$sz-base;
   background-color:$clr-snow;
   img {
    max-width: 100vw;
    height:auto;
    width:auto;
    max-height:60vh;
  }
}

 // ____________________
 // article
 // ____________________

 .tl-article {
   padding:$sz-base*4 $sz-base*2;
   h1 {
     text-transform:none;
     font-weight:900;
     font-family:$fnt-header;
     font-size:$sz-font-base*2;
   }
   h2, h3, h4, h5, h6 {
     font-weight:900;
     font-family:$fnt-header;
   }
 }

