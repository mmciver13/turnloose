      }
    }
  }

.tl-precheck {
  padding:0;
  form {
    margin:0;
  }
  input, select {
    border:2px solid $clr-black;
    margin:0 auto $sz-base auto;
    font-weight:bold;
    font-family:$fnt-body;
    font-size:16px;
    padding: 17px;
    line-height:30px;
    max-width: 280px;
    text-align:center;
  }
  .tl-add-to-cart {
    margin-top:$sz-base*2;
    width:100%;
    button {
      display:block;
      border:none;
      outline:none;
      background-color:$clr-gold;
      width:100%;
      padding:$sz-base*3 $sz-base;
      font-weight:600;
      font-family:$fnt-body;
      color:$clr-white;
      font-size:40px;
      line-height:45px;
      text-transform:uppercase;
      transition:all .5s ease;
      &:hover {
        background-color:lighten($clr-gold,10%);
      }
      @media (max-width:676px) {
        font-size:28px;
        line-height:30px;
      }
    }
  }
  .tl-quantity-selector {
    text-align:center;
    padding-bottom:$sz-base*3;
    .js-qty {
      margin:0 auto;
      max-width: 280px;
    }
  }
}

